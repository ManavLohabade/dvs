{
  "name": "dvs-backend",
  "version": "1.0.0",
  "description": "Backend for Daily Good Timings web app",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "build": "echo 'Backend build completed - no compilation needed for Node.js'",
    "build:prod": "NODE_ENV=production node server.js",
    "build:docker": "echo 'Building Docker image...' && docker build -t dvs-backend .",
    "build:clean": "rm -rf node_modules package-lock.json && npm install",
    "test": "echo 'No tests specified'",
    "test:db": "node scripts/testDatabase.js",
    "lint": "echo 'No linter configured'",
    "db:update": "node scripts/updateDatabase.js",
    "db:reset": "node scripts/resetDatabase.js",
    "db:migrate": "node scripts/migrateDatabase.js",
    "db:add-days": "node scripts/addAllDaysData.js",
    "db:backup": "node scripts/backupDatabase.js",
    "db:restore": "node scripts/restoreDatabase.js",
    "logs": "tail -f logs/app.log",
    "health": "curl -f http://localhost:5000/api/health || exit 1"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "date-fns": "^2.30.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "jsonwebtoken": "^9.0.2",
    "node-fetch": "^2.7.0",
    "nodemailer": "^7.0.6",
    "pg": "^8.11.3"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  },
  "keywords": [
    "calendar",
    "timings",
    "admin",
    "user"
  ],
  "author": "Ada Insys",
  "license": "MIT"
}
